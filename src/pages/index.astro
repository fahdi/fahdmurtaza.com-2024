---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Welcome to Fahad Murtaza's Portfolio">
	<main>
		<h1>Welcome to <span class="text-gradient">Fahad Murtaza's Portfolio</span></h1>
		<p class="intro">
			Hello! I'm Fahad Murtaza, a WordPress expert with extensive experience in web development. Explore my work and get in touch to discuss your projects.
		</p>
		<ul role="list" class="link-card-grid">
			<Card
				href="https://fahadmurtaza.com/about"
				title="About Me"
				body="Learn more about my background, skills, and experiences."
			/>
			<Card
				href="https://fahadmurtaza.com/projects"
				title="Projects"
				body="Discover the projects I have worked on and my contributions."
			/>
			<Card
				href="https://fahadmurtaza.com/blog"
				title="Blog"
				body="Read my latest articles and insights on web development."
			/>
			<Card
				href="https://fahadmurtaza.com/contact"
				title="Contact"
				body="Get in touch with me for consultations or collaborations."
			/>
		</ul>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
		background: rgba(0, 0, 0, 0.75);
		border-radius: 10px;
		text-align: center;
	}
	h1 {
		font-size: 3rem;
		font-weight: 700;
		line-height: 1.2;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: linear-gradient(90deg, #f3ec78, #af4261);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 200%;
		background-position: 0%;
		animation: gradient-shift 5s infinite;
	}
	@keyframes gradient-shift {
		0% { background-position: 0%; }
		50% { background-position: 100%; }
		100% { background-position: 0%; }
	}
	.intro {
		margin-bottom: 2rem;
		background: rgba(255, 255, 255, 0.1);
		padding: 1.5rem;
		border-radius: 8px;
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
